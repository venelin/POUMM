citHeader("To cite POUMM in publications use:")

citEntry(entry = "Article",
  title        = "Fast and Robust Inference of Phylogenetic Ornstein-Uhlenbeck Models Using Parallel Likelihood Calculation",
  author       = personList(as.person("Venelin Mitov"),
                   as.person("Tanja Stadler")),
  journal      = "BiorXiv",
  year         = "2017",
  volume       = "",
  number       = "",
  pages        = "",
  url          = "http://biorxiv.org/content/early/2017/05/30/115089",

  textVersion  =
  paste("Venelin Mitov, Tanja Stadler (2017).",
        "Fast and Robust Inference of Phylogenetic Ornstein-Uhlenbeck Models Using Parallel Likelihood Calculation",
        "BiorXiv",
        "URL http://biorxiv.org/content/early/2017/05/30/115089")
)
